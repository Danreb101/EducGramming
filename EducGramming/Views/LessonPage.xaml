<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:EducGramming.ViewModels"
             x:Class="EducGramming.Views.LessonPage"
             x:DataType="viewmodels:LessonViewModel"
             BackgroundColor="#17212B">

    <Grid>
        <!-- Main Content -->
        <Grid RowDefinitions="Auto,*">
            <!-- Header -->
            <Grid Grid.Row="0" 
                  Padding="16,12"
                  ColumnDefinitions="Auto,*"
                  BackgroundColor="#17212B">
                <!-- Hamburger Menu Button -->
                <Button Grid.Column="0"
                        Text="☰"
                        FontSize="24"
                        TextColor="#8A8D91"
                        BackgroundColor="Transparent"
                        Padding="0"
                        Margin="0,0,16,0"
                        HeightRequest="32"
                        WidthRequest="32"
                        Command="{Binding ToggleSidebarCommand}"
                        HorizontalOptions="Start"
                        VerticalOptions="Center"/>
                <Label Grid.Column="1"
                       Text="Learning Path"
                       TextColor="#FFFFFF"
                       FontSize="20"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
            </Grid>

            <!-- Lesson Content -->
            <Grid Grid.Row="1"
                  Margin="16,20"
                  RowDefinitions="3*,2*">
                <!-- Video Section -->
                <Border Grid.Row="0"
                        Margin="0,0,0,10"
                        Stroke="#3B5B8F"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 16"
                        BackgroundColor="#1B3B6F">
                    <Grid RowDefinitions="Auto,*,Auto">
                        <Label Text="{Binding CurrentVideo.Title}"
                               Margin="20,15"
                               TextColor="White"
                               FontSize="24"
                               FontAttributes="Bold"/>
                        <!-- Video Player Placeholder -->
                        <Border Grid.Row="1"
                                Margin="20,0,20,20"
                                StrokeShape="RoundRectangle 12"
                                BackgroundColor="#000000"
                                HeightRequest="400">
                            <Grid>
                                <Label Text="Video content will be available soon"
                                       TextColor="#808080"
                                       FontSize="18"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Grid>
                        </Border>
                        <!-- Video Description -->
                        <VerticalStackLayout Grid.Row="2"
                                           Margin="20,0,20,20">
                            <Label Text="{Binding CurrentVideo.Description}"
                                   TextColor="#B0B0B0"
                                   FontSize="16"/>
                        </VerticalStackLayout>
                    </Grid>
                </Border>
                <!-- Questions Section -->
                <Border Grid.Row="1"
                        Margin="0,10,0,0"
                        Stroke="#3B5B8F"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 16"
                        BackgroundColor="#1B3B6F">
                    <Grid RowDefinitions="Auto,*">
                        <Label Text="Practice Questions"
                               Margin="20,15"
                               TextColor="White"
                               FontSize="24"
                               FontAttributes="Bold"/>
                        <ScrollView Grid.Row="1">
                            <CollectionView ItemsSource="{Binding CurrentQuestions}"
                                          Margin="20,0,20,20">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="viewmodels:LessonItem">
                                        <Border Margin="0,10"
                                                StrokeShape="RoundRectangle 8"
                                                BackgroundColor="#2C4C80"
                                                Stroke="#3B5B8F"
                                                StrokeThickness="1"
                                                Padding="15">
                                            <VerticalStackLayout Spacing="10">
                                                <Label Text="{Binding Title}"
                                                       TextColor="White"
                                                       FontSize="16"
                                                       FontAttributes="Bold"/>
                                                <VerticalStackLayout BindableLayout.ItemsSource="{Binding Options}">
                                                    <BindableLayout.ItemTemplate>
                                                        <DataTemplate x:DataType="x:String">
                                                            <RadioButton Content="{Binding .}"
                                                                       TextColor="White"
                                                                       GroupName="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:LessonItem}}, Path=Title}"/>
                                                        </DataTemplate>
                                                    </BindableLayout.ItemTemplate>
                                                </VerticalStackLayout>
                                            </VerticalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </ScrollView>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Sidebar Overlay (must be last/topmost) -->
        <Grid x:Name="SidebarOverlay"
              IsVisible="{Binding IsSidebarVisible}"
              BackgroundColor="#00000080"
              InputTransparent="False">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding ToggleSidebarCommand}"/>
            </Grid.GestureRecognizers>
            <!-- Sidebar Panel -->
            <Grid x:Name="SidebarPanel"
                  WidthRequest="260"
                  BackgroundColor="#17212B"
                  HorizontalOptions="Start"
                  VerticalOptions="Fill"
                  Padding="0"
                  TranslationX="-260">
                <!-- Close Button -->
                <Button Text="✕"
                        BackgroundColor="Transparent"
                        TextColor="#8A8D91"
                        FontSize="22"
                        HorizontalOptions="End"
                        VerticalOptions="Start"
                        Margin="0,12,8,0"
                        HeightRequest="32"
                        WidthRequest="32"
                        Command="{Binding ToggleSidebarCommand}"/>
                <!-- Sidebar Content -->
                <ScrollView Margin="0,48,0,0">
                    <VerticalStackLayout Spacing="0">
                        <CollectionView ItemsSource="{Binding LessonSections}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="viewmodels:LessonSection">
                                    <VerticalStackLayout>
                                        <!-- Section Header -->
                                        <Grid Padding="16,12,16,4">
                                            <Grid.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:LessonViewModel}}, Path=ToggleSectionCommand}"
                                                                    CommandParameter="{Binding .}"/>
                                            </Grid.GestureRecognizers>
                                            <Grid ColumnDefinitions="*,Auto">
                                                <Label Grid.Column="0"
                                                       Text="{Binding Title}"
                                                       TextColor="#8A8D91"
                                                       FontSize="13"/>
                                                <Label Grid.Column="1"
                                                       Text="{Binding IsExpanded, Converter={StaticResource BoolToExpandCollapseIconConverter}}"
                                                       TextColor="#8A8D91"
                                                       FontSize="13"/>
                                            </Grid>
                                        </Grid>
                                        <!-- Lessons -->
                                        <CollectionView ItemsSource="{Binding Lessons}"
                                                      IsVisible="{Binding IsExpanded}">
                                            <CollectionView.ItemTemplate>
                                                <DataTemplate x:DataType="viewmodels:LessonItem">
                                                    <Grid BackgroundColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter=#2B5278:#17212B}"
                                                          HeightRequest="44">
                                                        <Grid.GestureRecognizers>
                                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:LessonViewModel}}, Path=SelectLessonCommand}"
                                                                                CommandParameter="{Binding .}"/>
                                                        </Grid.GestureRecognizers>
                                                        <Label Text="{Binding Title}"
                                                               TextColor="White"
                                                               FontSize="15"
                                                               Margin="16,0"
                                                               VerticalOptions="Center"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>
                                    </VerticalStackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </ScrollView>
            </Grid>
        </Grid>
    </Grid>
</ContentPage> 