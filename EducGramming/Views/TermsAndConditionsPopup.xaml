<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EducGramming.Views.TermsAndConditionsPopup">
    <Frame BackgroundColor="White"
           CornerRadius="15"
           Margin="20"
           Padding="20"
           VerticalOptions="Center"
           HorizontalOptions="Fill"
           MaximumHeightRequest="600">
        
        <Grid RowDefinitions="Auto,*,Auto">
            <!-- Header -->
            <VerticalStackLayout Grid.Row="0" Spacing="10">
                <Label Text="Terms and Conditions"
                       FontSize="24"
                       TextColor="#0A1128"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>
                <BoxView HeightRequest="1"
                         BackgroundColor="#E0E0E0"
                         HorizontalOptions="Fill"/>
            </VerticalStackLayout>

            <!-- Content -->
            <ScrollView Grid.Row="1" Margin="0,10">
                <VerticalStackLayout Spacing="15">
                    <!-- Welcome Section -->
                    <Label Text="Welcome to EducGramming!"
                           FontAttributes="Bold"
                           FontSize="18"
                           TextColor="#0A1128"/>
                    <Label Text="By using our educational programming application, you agree to these terms and conditions. Please read them carefully."
                           TextColor="#333333"/>

                    <!-- User Agreement Section -->
                    <Label Text="1. User Agreement"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="#0A1128"/>
                    <Label TextColor="#333333">
                        <Label.Text>
By accessing and using EducGramming, you accept and agree to these terms and conditions. If you do not agree to these terms, please do not use our application.
                        </Label.Text>
                    </Label>

                    <!-- Privacy Section -->
                    <Label Text="2. Privacy and Data Protection"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="#0A1128"/>
                    <Label TextColor="#333333">
                        <Label.Text>
We respect your privacy and protect your personal information. We collect and use data in accordance with our Privacy Policy, which includes:
• User account information
• Learning progress and performance data
• Usage statistics and analytics
                        </Label.Text>
                    </Label>

                    <!-- User Conduct -->
                    <Label Text="3. User Conduct"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="#0A1128"/>
                    <Label TextColor="#333333">
                        <Label.Text>
Users must:
• Provide accurate registration information
• Maintain the security of their account
• Not share account credentials
• Use the platform for educational purposes only
• Respect intellectual property rights
                        </Label.Text>
                    </Label>

                    <!-- Educational Content -->
                    <Label Text="4. Educational Content"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="#0A1128"/>
                    <Label TextColor="#333333">
                        <Label.Text>
Our educational content:
• Is provided for learning purposes only
• May be updated or modified periodically
• Is protected by copyright and intellectual property laws
• Should not be copied, distributed, or modified without permission
                        </Label.Text>
                    </Label>

                    <!-- Account Security -->
                    <Label Text="5. Account Security"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="#0A1128"/>
                    <Label TextColor="#333333">
                        <Label.Text>
You are responsible for:
• Maintaining the confidentiality of your account
• All activities that occur under your account
• Notifying us of any unauthorized access
• Ensuring your password meets security requirements
                        </Label.Text>
                    </Label>

                    <!-- Learning Progress -->
                    <Label Text="6. Learning Progress"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="#0A1128"/>
                    <Label TextColor="#333333">
                        <Label.Text>
We track and store:
• Your progress through courses
• Quiz and assessment results
• Time spent on learning activities
• Completion certificates and achievements
                        </Label.Text>
                    </Label>

                    <!-- Prohibited Activities -->
                    <Label Text="7. Prohibited Activities"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="#0A1128"/>
                    <Label TextColor="#333333">
                        <Label.Text>
The following activities are prohibited:
• Sharing solutions to exercises
• Attempting to bypass security measures
• Using automated systems to access content
• Disrupting the learning experience of others
                        </Label.Text>
                    </Label>

                    <!-- Changes to Service -->
                    <Label Text="8. Changes to Service"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="#0A1128"/>
                    <Label TextColor="#333333">
                        <Label.Text>
We reserve the right to:
• Modify or discontinue features
• Update content and materials
• Change pricing (with notice)
• Terminate accounts for violations
                        </Label.Text>
                    </Label>

                    <!-- Contact Information -->
                    <Label Text="9. Contact Information"
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="#0A1128"/>
                    <Label TextColor="#333333">
                        <Label.Text>
For questions about these terms, please contact us at:
support@educgramming.com
                        </Label.Text>
                    </Label>

                    <!-- Last Updated -->
                    <Label Text="Last Updated: May 2024"
                           FontSize="12"
                           TextColor="#666666"
                           Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </ScrollView>

            <!-- Close Button -->
            <Button Grid.Row="2"
                    Text="I Understand"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="25"
                    HeightRequest="50"
                    Margin="0,10,0,0"
                    Clicked="OnCloseButtonClicked">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#0A1128" Offset="0.0" />
                        <GradientStop Color="#1B3B6F" Offset="1.0" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Grid>
    </Frame>
</ContentView> 